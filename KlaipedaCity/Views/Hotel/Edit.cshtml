@model Hotel

@{
    string title = ViewBag.Action + " Hotel";
    ViewBag.Title = title;
}

<head>
    <link rel="stylesheet" href="~/css/custom.css" />
</head>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <div class="row pt-3 pb-3">
                <div class="col-xl-2">
                    <img class="coat_arms" src="~/Content/Images/klaipeda_coat_arms.png" />
                </div>
                <div class="text-left col-xl-8 ml-5">
                    <h1 class="jumbo_title">Edit Hotel</h1>
                </div>
            </div>
        </div>
    </header>
</div>

<div class="container">
    <form asp-action="Edit" method="post" class="mt-5 mb-5">
        <div class="card border-dark">
            <div class="card-header text-success"><h4>Please fill out this form to update a hotel</h4></div>
            <div class="card-body">
                <!-- hidden ID property -->
                <input type="hidden" asp-for="HotelID" />

                <div class="row mb-2">
                    <label asp-for="HotelName" class="control-label col-sm-2 col-md-2"><strong>Hotel</strong></label>
                    <input asp-for="HotelName" class="form-control col-sm-8 col-md-6" />
                </div>

                <div class="row mb-2">
                    <label asp-for="HotelAddress" class="control-label col-sm-2 col-md-2"><strong>Address</strong></label>
                    <input asp-for="HotelAddress" class="form-control col-sm-8 col-md-6 mb-8" /><br />
                </div>

                <div class="row mb-2">
                    <label asp-for="HotelRating" class="control-label col-sm-2 col-md-2"><strong>Rating</strong></label>
                    <input asp-for="HotelRating" class="form-control col-sm-8 col-md-6 mb-8" /><br />
                </div>

                <div class="row mb-2">
                    <label asp-for="HotelPrice" class="control-label col-sm-2 col-md-2"><strong>Price</strong></label>
                    <input asp-for="HotelPrice" class="form-control col-sm-8 col-md-6 mb-8" /><br />
                </div>

                <div class="row mb-2">
                    <label asp-for="HotelLink" class="control-label col-sm-2 col-md-2"><strong>Web Link</strong></label>
                    <input asp-for="HotelLink" class="form-control col-sm-8 col-md-6 mb-8" /><br />
                </div>

                <div class="row mb-5">
                    <label asp-for="Sender.SenderName" class="control-label col-sm-2 col-md-2"><strong>Entry By</strong></label> <!--added new field for the entry's author-->
                    <input asp-for="Sender.SenderName" class="form-control col-sm-8 col-md-6 mb-8 mr-3" /><br />
                    <span asp-validation-for="Sender.SenderName" class="text-danger"></span>
                </div>
                <!-- Buttons -->
                <button type="submit" class="btn btn-outline-success font-weight-bold">Update</button>
                <a class="btn btn-outline-danger font-weight-bold" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>